{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": [
      "es6",
      "DOM",
      "ES2015",
      "ES2017"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "./*"
      ]
    }
  },

  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "jest.config.js"
  ]
}